---
interface Props {
    date: Date;
}

const {date} = Astro.props;
---

<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString("en-US", {
            month: "long",
            day: "2-digit",
            year: "numeric",
            hour: "2-digit",
            minute: "2-digit"
        })
    }
</time>
